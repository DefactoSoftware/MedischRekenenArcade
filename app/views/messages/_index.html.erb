<div id="messages">
  <div class="message" style="padding-top:10px; float:left;">
    <span id="messages_title"><%= t('message.title') %></span>
    <span id="messages_links">
      <span id="messages_invite_link">
        <a href="javascript:void()" class="toggle_invite"><%= t('message.challenge_user') %></a>
      </span>
    </span>
  </div>
  <% all_notifications.each do |message| %>
    <div class="message">
      <%= MessagePresenter.new(message, self).render_message%>
    </div>
  <% end %>
</div>
<div id="messages_background" class="transparant_overlay"></div>
