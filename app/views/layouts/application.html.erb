<!DOCTYPE html>
<html>
<head>
  <title><%= t("title") %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= filepicker_js_include_tag %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=0.8, user-scalable=no">
</head>
<body>
<div id="navbar" class="navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
        ▼
        <span class="sr-only">Toggle navigation</span>
      </button>
      <%= link_to root_path, class:"navbar-brand" do%><%= t("title") %> <%= current_user ? " : #{current_user.user_group.name}" : ""%><% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav big-links">
        <li><%= link_to challenges_path do %><%= t("menu.challenges") %><% end %></li>
        <li><%= link_to practice_path do %><%= t("menu.practice") %><% end %></li>
      </ul>
      <% if @challenge %>
      <ul class="nav navbar-nav ">
        <li><a href="#"><%= t("challenges.#{@challenge.name}.title") %></a></li>
      </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="<%= current_user.profilepicture_url%>" class="img-circle profile-pic" width="40px" height="40px">
              <%= current_user.username %>
               ▼
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "#{ENV['HIPCHAT_ROOM']}?name=#{current_user.name}" do %><%= t("menu.help") %> <%= image_tag("hipchat.png", title: "Help!", height: "20px") %><% end %></li>
              <li><%= link_to edit_user_registration_path(current_user) do %><%= t("menu.settings")%><% end %></li>
              <li><%= link_to user_statistics_path(current_user) do %><%= t("menu.statistics") %><% end %></li>
              <li><%= link_to leaderboards_path do %><%= t("menu.leaderboards") %><% end %></li>
              <li><%= link_to users_path do %><%= t("menu.users") %><% end %></li>
            </ul>
          </li>
          <li><%= link_to destroy_user_session_path, id:"menu_logout", :method => :delete do %><%= t("menu.logout")%><% end %></li>
        <% else %>
          <li><%= link_to new_user_session_path, id:"menu_login" do %><%= t("menu.login")%><% end %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div id="main">
  <%= yield %>
</div>

<% if notice || alert%>
  <div class="dialog notice_block">
    <div class="container">
      <%= notice %>
      <%= alert %>
    </div>
  </div>
<% end %>

<%= render 'badges/notification', notification: @notification if @notification %>

<%= render "feedback/feedback.html.erb" if current_user %>

