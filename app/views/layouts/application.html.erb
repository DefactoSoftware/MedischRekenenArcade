<!DOCTYPE html>
<html>
<head>
  <title>MedischRekenenArcade</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="navbar">
  <div class="navbar-header">
    <%= link_to root_path, class:"navbar-brand" do%><%= t("title") %> <%= current_user ? " : #{current_user.user_group.name}" : ""%><% end %>
  </div>
  <ul class="nav navbar-nav big-links">
    <li><%= link_to challenges_path do %><%= t("menu.challenges") %><% end %></li>
    <li><%= link_to practice_path do %><%= t("menu.practice") %><% end %></li>
  </ul>
  <% if @challenge %>
  <ul class="nav navbar-nav ">
    <li><a href="#"><%= "#{@challenge.name} challenge" %></a></li>
  </ul>
  <% end %>
  <ul class="nav navbar-nav navbar-right">
    <% if current_user %>
      <li>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <img src="<%= current_user.profilepicture_url%>" class="img-circle profile-pic" width="40px" height="40px">
          <%= current_user.username %>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to edit_user_registration_path(current_user) do %><%= t("menu.settings")%><% end %></li>
          <li><%= link_to user_statistics_path(current_user) do %><%= t("menu.statistics") %><% end %></li>
          <li><%= link_to leaderboards_path do %><%= t("menu.leaderboards") %><% end %></li>
          <li><%= link_to users_path do %><%= t("menu.users") %><% end %></li>
        </ul>
      </li>
      <li><%= link_to destroy_user_session_path, id:"menu_logout", :method => :delete do %><%= t("menu.logout")%><% end %></li>
    <% else %>
      <li><%= link_to new_user_session_path, id:"menu_login" do %><%= t("menu.login")%><% end %></li>
    <% end %>
  </ul>
</div>




<div id="main">

  <%= yield %>
</div>

<% if notice %>
  <div class="dialog notice_block">
    <div class="container">
      <%= notice %>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="dialog alert">
    <div class="container">
      <%= alert %>
    </div>
  </div>
<% end %>

<div>
  <%= yield %>
</div>



<div id="feedback_report" class="feedback_report">
  <%= form_for(FeedbackReport.new) do |f| %>
    <h4>Give feedback!</h4>
    <div class="form-group">
      <%= f.text_field :subject, class: "form-control", placeholder: t("feedback_report.placeholders.subject"), required: true %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, class:"form-control", placeholder: t("feedback_report.placeholders.text"), rows:"10", required: true %>
    </div>
    <div class="form-group">
    <%= f.submit t("feedback_report.form.submit") %>
    </div>
  <% end %>
</div>
<div id="feedback_background" class="black_overlay"></div>
<div class="btn feedback-btn">
      <button id="toggle_feedback" class="btn submit-btn">Feedback!</button>
    </div>
