<% if !devise_error_messages!.empty? %><div id="error" class="dialog"><div class="container"><%= devise_error_messages! %></div></div><% end %>
<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-2 col-xs-1"></div>
  <div class="col-lg-4 col-md-4 col-sm-8 col-xs-8 form-wrapper">
    <h2>Change your password</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %>
        <%= f.password_field :password, autofocus: true, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, class:"form-control" %>
      </div>

      <div><%= f.submit "Change my password", class:"btn btn-primary btn-submit" %></div>
  <% end %>

<%= render "devise/shared/links" %>

