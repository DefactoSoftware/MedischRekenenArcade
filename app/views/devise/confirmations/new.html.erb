<% if !devise_error_messages!.empty? %>
  <div class="dialog notice_block">
    <%= devise_error_messages! %>
  </div>
<% end %>
<div class="row">
  <div class="three-column-equal-side"></div>
  <div class="three-column-equal-main form-wrapper">
    <h2><%= t("devise.confirmations.title") %></h2>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email, t("labels.email") %>
      <%= f.email_field :email, class:"form-control" ,autofocus: true, placeholder: t("placeholders.email") %>
    </div>

    <div class="form-group">
      <%= f.submit t("devise.confirmations.resend_button"), class:"btn btn-primary btn-suxbmit" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
