<% if !devise_error_messages!.empty? %><div id="error" class="dialog"><div class="container"><%= devise_error_messages! %></div></div><% end %>
<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-2 col-xs-1"></div>
  <div class="col-lg-4 col-md-4 col-sm-8 col-xs-8 form-wrapper">
    <h2><%= t("devise.confirmations.title") %></h2>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class:"form-control" ,autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.submit t("devise.confirmations.resend_button") %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
