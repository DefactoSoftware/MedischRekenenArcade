<div id="<%= badge.name %>" class="thumbnail thumbnail-challenge <%= badge_inactive(user, badge)%>">
  <%= link_to badges_path, class:"thumb-link" do %>
    <img class="image" src="<%=asset_path(badge.image) %>">
    <div class="caption">
      <div class="inner">
        <h2><%= t("badges.#{badge.name}.name") %></h2>
        <div class="more">
          <p class="description"><%= t("badges.#{badge.description}") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
