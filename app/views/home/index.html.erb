<div class="row">
  <div class="three-column-small">
    <% if current_user %>
      <% if @last_badge %>
        <div class="block">
          <h4><%= t("labels.last_badge") %></h4>
          <%= render 'badges/thumbnail', badge: @last_badge %>
        </div>
      <% end %>
      <% if @last_challenge %>
        <div class="block">
          <h4><%= t("labels.last_challenge") %></h4>
          <%= render 'challenges/thumbnail', challenge: @last_challenge, user: current_user %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="three-column-big block center">
    <h1><%= personalized_welcome(current_user)%></h1>
    <h4><%= t("home.tag_line") %></h4>
    <div class="row">
      <% if !current_user %>
        <div class="info-text two-column-fill">
          <p><%= personalized_text(current_user) %></p>
        </div>
        <div class="two-column-fill">
          <div class="thumbnail">
          <%= image_tag("logo1.png") %>
          </div>
        </div>
      <% else %>
        <div class="one-column-fill center">
          <p><%= personalized_text(current_user) %></p>
        </div>
      <% end %>
    </div>
      <div class="row center">
        <div id="call_to_action_buttons one-column-fill">
          <% if !current_user %>
            <%= link_to new_user_registration_path do %><button class="btn btn-landing"><%= t("menu.sign_up") %></button><% end %>

            <%= link_to new_user_session_path do %><button class="btn btn-secondary"><%= t("menu.login") %></button><% end %>
          <% else %>
            <%= link_to challenges_path do %><button class="btn btn-landing"><%= t("menu.challenges") %></button><% end %>
            <%= link_to practice_path do %><button class="btn btn-secondary"><%= t("menu.practice") %></button><% end %>
          <% end %>
        </div>
      </div>
    </div>

  <% if current_user %>
  <div class="three-column-small">
    <div class="block">
      <%= render 'leaderboards/user_group', scores: @scores %>
    </div>
    <div class="block">
      <%= render 'activities/index' %>
    </div>
  </div>
  <% end %>
</div>
