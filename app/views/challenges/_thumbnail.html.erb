<div class="thumbnail">
  <a
    href="<%= challenge_path(challenge.name) %>"
    class="thumb-link"
    data-toggle="popover"
    data-container="body"
    data-original-title="<%= challenge.name %>"
    title
    data-content='<%=challenge_table(challenge,user)%>'
  >
    <div class="image" style="background-image:url(<%= challenge.icon %>)"></div>
    <div class="caption">
      <div class="inner">
        <h2><%= t("challenges.#{challenge.name}") %></h2>
      </div>
    </div>
</a>
</div>

