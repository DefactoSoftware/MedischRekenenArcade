<div class="row image_background">
  <div class="three-column-small">
    <div class="block">
      <%= render 'info' %>
    </div>
    <div class="block">
      <%= render 'challenges/info', challenge: @challenge %>
    </div>

  </div>
  <div class="three-column-big answers">
    <%= render 'problems/problem', problem: @problem %>
  </div>
  <div class="three-column-small">
    <div class="block">
      <%= render 'sessions/scores' %>
      <%= render 'scores' %>
    </div>
    <div class="block">
      <%= render 'answer_feedback/answer_feedback', answer: @last_answer %>
    </div>
    <div class="block">
      <% if @challenge.timelimit %>
        <%= render 'sessions/time' %>
      <% end %>
    </div>
  </div>
</div>
